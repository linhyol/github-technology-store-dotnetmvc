
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}
<table align="center">
    <h2 tyle="text-align:center">ĐĂNG KÍ TÀI KHOẢN</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Họ tên:</td>
            <td>@Html.TextBox("HoTenKH")  @ViewData["Loi1"]</td>
          
        </tr>
        <tr style="height:40px">
            <td>Tài khoản:</td>
            <td>@Html.TextBox("TenDN")  @ViewData["Loi2"]</td>
          
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu:</td>
            <td>@Html.Password("Matkhau")  @ViewData["Loi3"]</td>
          
        </tr>
        <tr style="height:40px">
            <td>Email:</td>
            <td>@Html.TextBox("Email")    @ViewData["Loi4"]</td>
        
        </tr>
        <tr style="height:40px">
            <td>Địa chỉ:</td>
            <td>@Html.TextBox("DiachiKH")   @ViewData["Loi5"]</td>
         
        </tr>
        <tr style="height:40px">
            <td>Số điện thoại:</td>
            <td>@Html.TextBox("DienthoaiKH")    @ViewData["Loi6"]</td>
        
        </tr>
        <tr style="height:40px">
            <td>Ngày Sinh:</td>
            <td>
                <input type="date" name="Ngaysinh"/>
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="Đăng ký" />
            </td>
        </tr>
    }
</table>

